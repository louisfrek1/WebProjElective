@model IEnumerable<WebProjElective.Models.Product>;

@{
    ViewBag.Title = "Products";
}
@* <link rel="stylesheet" href="~/css/admindes.css"> *@
<header>
    <h2>ADMIN PANEL ||| Products</h2>
    <div class="logout-icon">
        <img src="~/images/back-icon.png" alt="Logout">
    </div>
</header>
<a href="@Url.Action("CreateForm", "Product")" class="btn btn-primary">Add Product</a>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Available Items</th>
                <th>Category</th>
                <th>Date Uploaded</th>
                <th>Uploader</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.ProductDescription</td>
                    <td>
                        @if (product.ProductImage != null)
                        {
                            <img src="data:image;base64,@(Convert.ToBase64String(product.ProductImage))" class="product-image" />
                        }
                    </td>
                    <td>@product.ProductAvailableItems</td>
                    <td>@product.ProductCategory</td>
                    <td>@product.ProductDateUpload.ToShortDateString()</td>
                    <td>@product.ProductUserName</td>
                    <td>
                        <form method="get" action="@Url.Action("UpdateProductsForm", "Admin", new { id = product.ProductId})">
                            <button type="submit" class="btn btn-primary">UPDATE</button>
                        </form>
                        <form method="post" action="@Url.Action("DeleteProduct", "Admin", new { id = product.ProductId})" onsubmit="return confirm('Sure ka na e delete na nimo ni?');">
                            <button type="submit" class="btn btn-danger">DELETE</button>
                        </form>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .container .table .product-image {
        max-width: 80px; /* Adjust the maximum width as needed */
        max-height: 50px; /* Adjust the maximum height as needed */
        width: auto; /* Maintain aspect ratio */
        height: auto; /* Maintain aspect ratio */
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
    }

        header .logout-icon {
            position: absolute;
            top: 0;
            right: 10px; /* Adjust as needed */
        }

            header .logout-icon img {
                width: 24px;
                height: 24px;
                cursor: pointer;
            }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector(".logout-icon").addEventListener("click", function () {
            // Perform logout action or redirect to another page
            // For example, redirecting to a logout endpoint
            window.location.href = "/Admin/AdminForm"; // Replace with your logout URL
        });
    });
</script>