<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Store</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="header">
        <a href="#" class="logo">
            <img src="images/grocerylogo.png" alt="Logo"> Hehehe
        </a>

        <nav class="navbar">
            <a href="#home">Home</a>
            <a href="#features">Features</a>
            <a href="#products">Products</a>
            <a href="#categories">Categories</a>
        </nav>

        <div class="icons">
            <a href="#" class="icon"><i class="fas fa-bars" id="menu-btn"></i></a>
            <a href="#" class="icon"><i class="fas fa-search" id="search-btn"></i></a>
            <a href="#" class="icon"><i class="fas fa-shopping-cart" id="cart-btn"></i></a>
            <a href="#" class="icon"><i class="fas fa-user" id="login-btn"></i></a>
        </div>

        <form action="/Home/Login" method="post" class="search-form">
            <input type="search" id="search-box" placeholder="search here....">
            <label for="search-box" class="fas fa-search"></label>
        </form>

        

        <form action="/Home/Login" method="post" class="login-form" id="login-form">
            <h3>SIGN IN</h3>
            <input type="email" name="email" placeholder="email" class="box" required>
            <input type="password" name="password" placeholder="password" class="box" required>
            <p>don't have an account? <a href="#" id="register-link">create now</a></p>
            <button type="submit" class="btn">Login Now</button>
        </form>
        <div id="blur-background" class="blur-background"></div>
        <!-- Registration Form -->
        <form action="/Home/Index" method="post" class="registration-form" id="registration-form">
            <h3>REGISTER</h3>

            <input type="text" placeholder="username" class="box" name="UserName" required>
            <input type="email" placeholder="email" class="box" name="Email" required>
            <input type="password" placeholder="password" class="box" name="Password" required>

            <h1>Full Name</h1>
            <input type="name" placeholder="First Name" class="box" name="FName" required>
            <input type="name" placeholder="Last Name" class="box" name="LName" required>

            <h1>Address</h1>
            <input type="text" placeholder="Street Address" class="box" name="StAddress" required>
            <input type="text" placeholder="City" class="box" name="City" required>
            <input type="text" placeholder="Province" class="box" name="Province" required>

            <h1>Contact Information</h1>
            <input type="number" placeholder="Phone Number" class="box" name="PNumber" required>

            <input type="gender" placeholder="Gender" class="box" name="Gender" required>
            <input type="date" placeholder="Birthdate" class="box" name="BDate" required>
            <input type="hidden" placeholder="account type" class="box" name="AcctType" value="user">

            <button type="submit" class="btn">Register Now</button>
            <span id="close-registration">&times;</span>
        </form>

    </header>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <span class="close-btn">&times;</span>
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <span class="close-btn">&times;</span>
            @TempData["ErrorMessage"]
        </div>
    }
    <!-- Home Section ni dria-->
    <section class="home" id="home">
        <div class="content">
            <h3>Welcome to Our Store - <span>Your One-Stop Shop for Quality Products</span></h3>
            <p>Discover the best deals and exclusive offers on a wide range of products. From the latest electronics to essential household items, we've got everything you need at unbeatable prices. Shop now and experience the difference!</p>
            <a href="#" class="btn">Shop Na</a>
        </div>
    </section>

    <!-- Feature section ni dria-->

    <section class="features" id="features">

        <h1 class="heading"> our <span>features</span></h1>

        <div class="box-container">
            <div class="box">
                <img src="images/original-logo.png" alt="">
                <h3>100% Quality Guarantee</h3>
                <p>We ensure that all our products meet the highest quality standards. Your satisfaction is our priority.</p>
            </div>

            <div class="box">
                <img src="images/fastdelivery-logo.png" alt="">
                <h3>Fast and Reliable Shipping</h3>
                <p>Enjoy quick and dependable delivery to your doorstep. We handle your orders with care to ensure timely arrival.</p>
            </div>

            <div class="box">
                <img src="images/payment-logo.png" alt="">
                <h3>Easy and Secure Payments</h3>
                <p>Choose from a variety of payment options with secure transactions to make your shopping experience hassle-free.</p>
            </div>

        </div>
    </section>

    <!--Product section ni dria-->

    <section class="products" id="products">
        <h1 class="heading">our <span>products</span></h1>
        <div class="swiper product-slider">
            <div class="swiper-wrapper">
                @foreach (var product in Model)
                {
                    <div class="swiper-slide">
                        <div class="box">
                            <img src="data:image;base64,@Convert.ToBase64String(product.ProductImage)" alt="@product.ProductName">
                            <h3>@product.ProductName</h3>
                            <div class="price">@product.ProductPrice</div>
                            <a href="#" class="btn add-to-cart">add to cart</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <section class="categories" id="categories">
        <h1 class="heading">product <span>categories</span></h1>
        <div class="swiper category-slider">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="box">
                        <img src="/images/apples.png" alt="Sensors">
                        <h3>Sensors</h3>
                        <p>upto 45% off</p>
                        <a href="#" class="btn">shop now</a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="box">
                        <img src="~/images/fastdelivery-logo.png" alt="LCD and Displays">
                        <h3>LCD and Displays</h3>
                        <p>upto 45% off</p>
                        <a href="#" class="btn">shop now</a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="box">
                        <img src="~/images/banana.png" alt="Boards">
                        <h3>Boards</h3>
                        <p>upto 45% off</p>
                        <a href="#" class="btn">shop now</a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="box">
                        <img src="~/images/grocerylogo.png" alt="Kits">
                        <h3>Kits</h3>
                        <p>upto 45% off</p>
                        <a href="#" class="btn">shop now</a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="box">
                        <img src="~/images/original-logo.png" alt="Prototyping">
                        <h3>Prototyping</h3>
                        <p>upto 45% off</p>
                        <a href="#" class="btn">shop now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <main>
        <input type="hidden" id="isLoggedIn" value="false">
        <!-- Success and error messages -->
        <!-- Your main content goes here -->
    </main>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="site.js"></script>
