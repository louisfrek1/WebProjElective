@using System.Security.Claims
@model UserCart

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Store - Checkout</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="header">
        <a href="#" class="logo">
            <img src="~/images/grocerylogo.png" alt=""> Hehehe
        </a>
        <nav class="navbar">
            <a href="/Home/Dashboard">Home</a>
            <a href="/Home/Dashboard#features">Features</a>
            <a href="/Home/Dashboard#categories">Categories</a>
        </nav>

        <div class="icons">
            <a href="#" class="icon"><i class="fas fa-bars" id="menu-btn"></i></a>
            <div class="user-info-container">
                <button class="user-info-button" id="user-btn">
                    <i class="fas fa-user" id="login-btn"></i>
                    @* <img src="~/images/user-pflaceholder.png"> *@
                </button>
                <div class="user-info-dropdown" id="user-info">
                    <a href="/Home/ProfileForm"><i class="fas fa-user"></i>Profile</a>
                    <a href="/Home/MyOrderForm"><i class="fas fa-box"></i>Orders</a>
                    <a href="/Home/Logout"><i class="fas fa-sign-out-alt"></i>Log Out</a>
                </div>
            </div>
        </div>

        <div class="shopping-cart">
            @if (Model != null && Model.Carts.Any())
            {
                @foreach (var cart in Model.Carts)
                {
                    <div class="box">
                        <i class="fas fa-trash"></i>
                        <img src="data:image;base64,@Convert.ToBase64String(cart.ProdImage)" alt="@cart.ProdName" />
                        <div class="content">
                            <h3>@cart.ProdName</h3>
                            <span class="price">@cart.ProdPrice</span>
                            <span class="quantity">qty : 1</span>
                        </div>
                    </div>
                }

                <div class="total">total : Php @Model.Carts.Sum(cart => cart.ProdPrice)</div>
                <a href="#" class="btn">Checkout</a>
            }
            else
            {
                <p>Your cart is empty.</p>
            }
        </div>

        <form action="/Home/Login" method="post" class="search-form">
            <input type="search" id="search-box" placeholder="search here....">
            <label for="search-box" class="fas fa-search"></label>
        </form>


    </header>

    <main>
        <section class="delivery-address">
            <h2>Delivery Address</h2>
            <p><strong>@Model.User.FName @Model.User.LName</strong></p>
            <p>@Model.User.StAddress, @Model.User.City, @Model.User.Province</p>
            <p>@Model.User.PNumber</p>
        </section>

        <!-- Products Ordered Section -->
        <section class="products-ordered">
            <h2>Products Ordered</h2>
            <div class="products-list">
                @if (Model.Carts != null && Model.Carts.Any())
                {
                    @foreach (var cart in Model.Carts)
                    {
                        <div class="product-item">
                            <div class="product-info">
                                <img src="data:image;base64,@Convert.ToBase64String(cart.ProdImage)" alt="@cart.ProdName" />
                                <div class="product-details">
                                    <h3>@cart.ProdName</h3>
                                    <p>₱@cart.ProdPrice</p>
                                </div>
                            </div>
                            <div class="product-quantity">
                                <p>Quantity: 1</p>
                            </div>
                            <div class="product-subtotal">
                                <p>₱@cart.ProdPrice</p>
                            </div>
                        </div>
                    }

                    <div class="shipping-fee">
                        <p>+    Shipping Fee: ₱115</p>
                    </div>

                    <div class="order-total">
                        <p>Order Total: ₱@((Model.Carts.Sum(cart => cart.ProdPrice) + 115).ToString("F2"))</p>
                    </div>
                }
                else
                {
                    <p>Your cart is empty.</p>
                }
            </div>
        </section>



        <!-- Shipping Option Section -->
        <section class="shipping-option">
            <h2>Shipping Option</h2>
            <p>Standard Local</p>
            <p>Shipping Fee: Php 115</p>
        </section>

        <!-- Payment Method Section -->
        <section class="payment-method">
            <h2>Payment Method</h2>
            <p>Cash on Delivery</p>
        </section>

        <!-- Place Order Button -->
        <section class="place-order">
            <form method="post" asp-action="CheckoutForm">
                <input type="hidden" name="UN" value="@Model.User.UserName" />
                <input type="hidden" name="DatePlaced" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />
                <input type="hidden" name="Shipping" value="Standard Local" />
                <input type="hidden" name="PayMethod" value="Cash on Delivery" />
                <input type="hidden" name="TotalPrice" value="@((Model.Carts.Sum(cart => cart.ProdPrice) + 115).ToString("F2"))" />
                <button type="submit">Place Order</button>
            </form>
        </section>


    </main>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
        }

        section.header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: white;
            padding: 10px;
            color: white;
            text-align: center;
            z-index: 1000;
        }

        .header .logo img {
            max-width: 100px;
        }

        .navbar a {
            color: white;
            margin-right: 10px;
            text-decoration: none;
        }

            .navbar a:hover {
                text-decoration: underline;
            }

        .icons .icon {
            color: white;
        }

        .icons .user-info-container {
            position: relative;
            display: inline-block;
        }

        .icons .user-info-dropdown {
            display: none;
            position: absolute;
            right: 0;
            background-color: white;
            min-width: 160px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .icons .user-info-container:hover .user-info-dropdown {
            display: block;
        }

        .icons .user-info-dropdown a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .icons .user-info-dropdown a:hover {
                background-color: #ddd;
            }

        main {
            padding: 80px 20px 20px; /* Add top padding to avoid overlap with the fixed header */
        }

        section {
            background-color: white;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            table th, table td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            table th {
                background-color: #f2f2f2;
            }

        .total h3 {
            text-align: right;
            margin-top: 10px;
            font-size: 18px;
        }

        .place-order button {
            width: 100%;
            padding: 15px;
            background-color: #ff6600;
            color: white;
            border: none;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
        }

            .place-order button:hover {
                background-color: #cc5200;
            }


        /* Products Ordered Section */
        .products-ordered {
            margin-top: 20px;
        }


        .products-list {
            border-top: 1px solid #ddd;
            padding-top: 15px;
        }

        .product-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

        .product-info {
            display: flex;
            align-items: center;
        }

            .product-info img {
                width: 60px;
                height: 60px;
                object-fit: cover;
                margin-right: 10px;
            }

        .product-details {
            max-width: 200px;
        }

            .product-details h3 {
                font-size: 16px;
                margin: 0;
            }

            .product-details p {
                font-size: 14px;
                color: #555;
                margin: 0;
            }

        .product-quantity {
            font-size: 14px;
            color: #555;
        }

        .product-subtotal {
            font-size: 16px;
            color: #333;
        }

        .order-total {
            text-align: right;
            font-size: 18px;
            font-weight: bold;
            margin-top: 20px;
        }

        .shipping-fee{
            text-align: right;
            font-size: 13px;
            font-weight: normal;
            margin-top: 12px;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #ff6600;
            color: white;
            text-align: center;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #cc5200;
            }

    </style>
</body>
</html>
