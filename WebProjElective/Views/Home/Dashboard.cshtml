@using System.Security.Claims
@model List<Cart>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Store</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="header">
        <a href="#" class="logo">
            <img src="~/images/grocerylogo.png" alt=""> Hehehe</a>
        <nav class="navbar">
            <a href="#home">Home</a>
            <a href="#features">Features</a>
            <a href="#categories">Categories</a>
        </nav>

        <div class="icons">
            <a href="#" class="icon"><i class="fas fa-bars" id="menu-btn"></i></a>
            <a href="#" class="icon"><i class="fas fa-search" id="search-btn"></i></a>
            <a href="#" class="icon"><i class="fas fa-shopping-cart" id="cart-btn"></i></a>
            <div class="user-info-container">
                <button class="user-info-button" id="user-btn">
                    <i class="fas fa-user" id="login-btn"></i>
                    @* <img src="~/images/user-pflaceholder.png"> *@
                </button>
                <div class="user-info-dropdown" id="user-info">
                    <a href="/Home/ProfileForm"><i class="fas fa-user"></i>Profile</a>
                    <a href="/Home/MyOrderForm"><i class="fas fa-box"></i>Orders</a>
                    <a href="/Home/Logout"><i class="fas fa-sign-out-alt"></i>Log Out</a>
                </div>
            </div>
        </div>

        <div class="shopping-cart">
            @if (Model != null && Model.Any())
            {
                @foreach (var cart in Model)
                {
                    <div class="box">
                        <i class="fas fa-trash" data-id="@cart.ProdId" onclick="deleteItem(this)"></i>
                        <img src="data:image;base64,@Convert.ToBase64String(cart.ProdImage)" alt="@cart.ProdName" />
                        <div class="content">
                            <h3>@cart.ProdName</h3>
                            <span class="price">@cart.ProdPrice</span>
                            <span class="quantity">qty : 1</span>
                        </div>
                    </div>
                }

                <div class="total">total : Php @Model.Sum(cart => cart.ProdPrice)</div>
                <form action="/Home/CheckoutForm">
                    <button type="submit" class="btn">Checkout</button>
                </form>
            }
            else
            {
                <p>Your cart is empty.</p>
            }
        </div>


        <form action="/Home/Login" method="post" class="search-form">
            <input type="search" id="search-box" placeholder="search here....">
            <label for="search-box" class="fas fa-search"></label>
        </form>


    </header>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <span class="close-btn">&times;</span>
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <span class="close-btn">&times;</span>
            @TempData["ErrorMessage"]
        </div>
    }
    <!-- Home Section ni dria-->
    <section class="home" id="home">
        <div class="content">
            <p>Welcome to your dashboard, <span>@User.Identity.Name!</span></p>
            <h3>Enjoy shopping with us!</h3>
            <p>Your favorite products are just a click away.</p>
            <a href="/Home/StoreProductForm?category=Sensors" class="btn">SHOP NA</a>
        </div>
    </section>

    <!-- Feature section ni dria-->

    <section class="features" id="features">

        <h1 class="heading"> our <span>features</span></h1>

        <div class="box-container">
            <div class="box">
                <img src="~/images/original-logo.png" alt="">
                <h3>100% Guaranteed supplier</h3>
                <p>Quality products from trusted suppliers.</p>
              @*   <a href="#" class="btn">read more</a> *@
            </div>

            <div class="box">
                <img src="~/images/fastdelivery-logo.png" alt="">
                <h3>Fast Delivery</h3>
                <p>Get your products delivered quickly and safely.</p>
                @* <a href="#" class="btn">read more</a> *@
            </div>

            <div class="box">
                <img src="~/images/payment-logo.png" alt="">
                <h3>Easy payment</h3>
                <p>Convenient payment options for your ease.</p>
                @* <a href="#" class="btn">read more</a> *@
            </div>

        </div>
    </section>

    <!--Product section ni dria-->

    <!--Categories section ni dria-->

    <section class="categories" id="categories">
        <h1 class="heading">product <span>categories</span></h1>
        <div class="swiper category-slider">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="box">
                        <img src="/images/apples.png" alt="Sensors">
                        <h3>Sensors</h3>
                        <p>upto 45% off</p>
                        <a href="/Home/StoreProductForm?category=Sensors" class="btn">shop now</a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="box">
                        <img src="~/images/fastdelivery-logo.png" alt="LCD and Displays">
                        <h3>LCD and Displays</h3>
                        <p>upto 45% off</p>
                        <a href="/Home/StoreProductForm?category=LCD%20and%20Displays" class="btn">shop now</a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="box">
                        <img src="~/images/banana.png" alt="Boards">
                        <h3>Boards</h3>
                        <p>upto 45% off</p>
                        <a href="/Home/StoreProductForm?category=Boards" class="btn">shop now</a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="box">
                        <img src="~/images/grocerylogo.png" alt="Kits">
                        <h3>Kits</h3>
                        <p>upto 45% off</p>
                        <a href="/Home/StoreProductForm?category=Kits" class="btn">shop now</a>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="box">
                        <img src="~/images/original-logo.png" alt="Prototyping">
                        <h3>Prototyping</h3>
                        <p>upto 45% off</p>
                        <a href="/Home/StoreProductForm?category=Prototyping" class="btn">shop now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <main>
        <input type="hidden" id="userId" value="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value">
        <!-- Success and error messages -->
        <!-- Your main content goes here -->
    </main>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="site.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var swiper = new Swiper(".product-slider", {
                loop: true,
                spaceBetween: 20,
                autoplay: {
                    delay: 7500,
                    disableOnInteraction: false,
                },
                centeredSlides: true,
                breakpoints: {
                    0: {
                        slidesPerView: 1,
                    },
                    768: {
                        slidesPerView: 2,
                    },
                    1020: {
                        slidesPerView: 3,
                    },
                },
            });
            var categorySwiper = new Swiper(".category-slider", {
                loop: true,
                spaceBetween: 20,
                autoplay: {
                    delay: 7500,
                    disableOnInteraction: false,
                },
                centeredSlides: true,
                breakpoints: {
                    0: {
                        slidesPerView: 1,
                    },
                    768: {
                        slidesPerView: 2,
                    },
                    1020: {
                        slidesPerView: 3,
                    },
                },
            });

        });

        function deleteItem(element) {
            var prodId = element.getAttribute("data-id");

            if (confirm("Are you sure you want to delete this item?")) {
                fetch(`/Home/DeleteCartItem?prodId=${prodId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => {
                        if (response.ok) {
                            element.parentElement.remove(); // Remove item from the UI
                        } else {
                            alert("Failed to delete item.");
                        }
                    })
                    .catch(error => console.error('Error:', error));
            }
        }

    </script>
</body>
</html>
