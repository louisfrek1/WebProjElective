@using System.Security.Claims
@model UserCart

//UpdateProfileForm

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Store</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="header">
        <a href="#" class="logo">
            <img src="~/images/grocerylogo.png" alt=""> Hehehe
        </a>
        <nav class="navbar">
            <a href="#home">Home</a>
            <a href="#features">Features</a>
            <a href="#categories">Categories</a>
        </nav>

        <div class="icons">
            <a href="#" class="icon"><i class="fas fa-bars" id="menu-btn"></i></a>
            <a href="#" class="icon"><i class="fas fa-search" id="search-btn"></i></a>
            <a href="#" class="icon"><i class="fas fa-shopping-cart" id="cart-btn"></i></a>
            <div class="user-info-container">
                <button class="user-info-button" id="user-btn">
                    <i class="fas fa-user" id="login-btn"></i>
                    @* <img src="~/images/user-pflaceholder.png"> *@
                </button>
                <div class="user-info-dropdown" id="user-info">
                    <a href="#"><i class="fas fa-user"></i>Profile</a>
                    <a href="#"><i class="fas fa-box"></i>Orders</a>
                    <a href="/Home/Logout"><i class="fas fa-sign-out-alt"></i>Log Out</a>
                </div>
            </div>
        </div>

        <div class="shopping-cart">
            @if (Model != null && Model.Carts.Any())
            {
                @foreach (var cart in Model.Carts)
                {
                    <div class="box">
                        <i class="fas fa-trash"></i>
                        <img src="data:image;base64,@Convert.ToBase64String(cart.ProdImage)" alt="@cart.ProdName" />
                        <div class="content">
                            <h3>@cart.ProdName</h3>
                            <span class="price">@cart.ProdPrice</span>
                            <span class="quantity">qty : 1</span>
                        </div>
                    </div>
                }

                <div class="total">total : Php @Model.Carts.Sum(cart => cart.ProdPrice)</div>
                <a href="#" class="btn">Checkout</a>
            }
            else
            {
                <p>Your cart is empty.</p>
            }
        </div>

        <form action="/Home/Login" method="post" class="search-form">
            <input type="search" id="search-box" placeholder="search here....">
            <label for="search-box" class="fas fa-search"></label>
        </form>


    </header>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <span class="close-btn">&times;</span>
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <span class="close-btn">&times;</span>
            @TempData["ErrorMessage"]
        </div>
    }
    <!-- Home Section ni dria-->


    <main>
        <!-- Success and error messages -->
        <section id="profile" class="profile-section">
            <h2>Edit Profile</h2>
            <form method="post" action="/Home/UpdateProfileForm">
                <div class="profile-details">

                    <div class="form-group">
                        <label>Username:</label>
                        <input type="text" name="UserName" value="@Model.User.UserName" readonly class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>First Name:</label>
                        <input type="text" name="FName" value="@Model.User.FName" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Last Name:</label>
                        <input type="text" name="LName" value="@Model.User.LName" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Email:</label>
                        <input type="email" name="Email" value="@Model.User.Email" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Phone Number:</label>
                        <input type="text" name="PNumber" value="@Model.User.PNumber" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Address:</label>
                        <input type="text" name="StAddress" value="@Model.User.StAddress" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>City:</label>
                        <input type="text" name="City" value="@Model.User.City" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Province:</label>
                        <input type="text" name="Province" value="@Model.User.Province" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Birthdate:</label>
                        <input type="date" name="BDate" value="@Model.User.BDate.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>

                    <button type="submit" class="btn save-btn">Save Changes</button>
                    <a href="/Profile" class="btn cancel-btn">Cancel</a>
                </div>
            </form>
        </section>



        <!-- Your main content goes here -->
    </main>

    <style>
        .profile-section {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

            .profile-section h2 {
                text-align: center;
                margin-bottom: 20px;
                font-size: 24px;
                color: #333;
            }

        .profile-details .form-group {
            margin-bottom: 15px;
        }

        .profile-details label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }

        .profile-details .form-control {
            width: 100%;
            padding: 10px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            color: #333;
        }

        .profile-details .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            margin-top: 20px;
        }

            .profile-details .btn:hover {
                background-color: #0056b3;
            }

        .profile-details .cancel-btn {
            background-color: #ccc;
            margin-left: 10px;
        }

            .profile-details .cancel-btn:hover {
                background-color: #999;
            }

    </style>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="site.js"></script>
</body>
</html>